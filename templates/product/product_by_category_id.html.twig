{% extends 'base.html.twig' %}

{% block section_content %}

    <table class="table table-hover">
        <h1>{{ categoryName }}</h1>
        <br>
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
        </tr>
        </thead>
        {% for product in products %}
            <tr>
                <td> {{ product.getId }} </td>
                <td><a href="{{ path('show_product',{'productId':product.getId  }) }}"> {{ product.getName }} </a> </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}